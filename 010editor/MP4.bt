string ReadTime(mp4time& t)
{
    // Magic number 2082844800 is the difference in seconds between the
    // classic Mac OS epoch (midnight on January 1st 1904) and the POSIX
    // epoch (midnight on January 1st 1970).
    local quad value = (quad)t - 2082844800;
    return TimeTToString(value, "yyyy-MM-dd hh:mm:ss");
}

string ReadTime64(mp4time64& t)
{
    // Magic number 2082844800 is the difference in seconds between the
    // classic Mac OS epoch (midnight on January 1st 1904) and the POSIX
    // epoch (midnight on January 1st 1970).
    local quad value = (quad)t - 2082844800;
    return TimeTToString(value, "yyyy-MM-dd hh:mm:ss");
}

string ReadLang(mp4lang& lang)
{
    if (lang < 0x0400 || lang == qtlUnspecified)
    {
        local qtlang v = lang;
        return EnumToString(v);
    }
    local char iso[4];
    iso[0] = ((lang & 0x7c00) >> 10) + 0x60;
    iso[1] = ((lang & 0x03e0) >> 5) + 0x60;
    iso[2] = (lang & 0x001f) + 0x60;
    iso[3] = '\0';
    return iso;
}

string ReadOpcolor(qtopcolor& c)
{
    local string result;
    SPrintf(result, "r=%d, g=%d, b=%d", c.red, c.green, c.blue);
    return result;
}

string PipeConcat(string s1, string s2)
{
    if (Strlen(s1) > 0)
    {
        return s1 + " | " + s2;
    }
    return s2;
}

string ReadTkhdFlags(tkhd_flags& f)
{
    local string result;
    if (f.track_enabled)
    {
        result = "Track enabled";
    }
    if (f.track_in_movie)
    {
        result = PipeConcat(result, "Track in movie");
    }
    if (f.track_in_preview)
    {
        result = PipeConcat(result, "Track in preview");
    }
    if (f.track_in_poster)
    {
        result = PipeConcat(result, "Track in poster");
    }
    return result;
}

string ReadVmhdFlags(vmhd_flags& f)
{
    local string result;
    if (f.no_lean_ahead)
    {
        result = "No lean ahead";
    }
    return result;
}

wstring ReadMetaKey(meta_key& key)
{
    return key.namespace + "/" + key.value;
}

string ReadListItem(ilst_item& item)
{
    local string box_name = BoxName(item.box);
    // In QT's meta, indexes are 1-based whereas 010 Editor uses 0-based, so for sake of readability we turn QT's to 0-based.
    local string result = Str("key[%u]=%s:", item.keyIndex - 1, box_name);
    switch(box_name) {
        case "data":
            switch(item.box.data_type)
            {
                case qtUTF8:
                case qtUTF16:
                case qtUTF8Sort:
                case qtUTF16Sort:
                    result += item.box.data;
                    break;
                case qtSInt:
                case qtSInt8:
                case qtSInt16:
                case qtSInt32:
                case qtSInt64:
                    result += Str("%i", item.box.data);
                    break;
                case qtUInt:
                case qtUInt8:
                case qtUInt16:
                case qtUInt32:
                case qtUInt64:
                    result += Str("%u", item.box.data);
                    break;
                default:
                    result += EnumToString(item.box.data_type);
                    break;
            }
            break;
        case "name":
            result += item.box.data;
            break;
        case "itif":
            result += Str("%u", item.box.data);
            break;
        default:
            break;
    }
    return result;
}

