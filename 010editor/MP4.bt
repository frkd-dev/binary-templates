// NOTE: Some atoms (i.e. "udta") may contain "the data lists optionally terminated by a 32-bit integer set to 0."
// URL: https://developer.apple.com/documentation/quicktime-file-format/user_data_atom/user_data_list
typedef struct
{
    uint32 size;
    if (size != 0) {
        // QT docs: For historical reasons, the data lists is optionally terminated by a 32-bit integer set to 0.
        fourcc type;
        if (size == 1)
        {
            uint64 size64;
        }
        if (type == "uuid")
        {
            char user_type[16];
        }
    }
} box_header <open=suppress>;

